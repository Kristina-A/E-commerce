
@{
    ViewBag.Title = "NewProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<h2 class="text-center">Novi proizvod</h2>

<hr />

<div class="row">
    <!--Forma za dodavanje proizvoda-->
    <form id="formProduct" class="col-md-6 col-md-offset-2">
        <div class="form-group row">
            <label class="col-sm-4 control-label">Naziv:</label>
            <div class="col-sm-7">
                <input type="text" class="form-control" id="inputName">
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 control-label">Kategorija:</label>
            <div class="col-sm-7">
                <select class="custom-select">
                    <option selected>Izaberite jednu kategoriju</option>
                    <option value="1">Mobilni uređaji</option>
                    <option value="2">Računari i komponente</option>
                    <option value="3">TV, audio, foto, video</option>
                    <option value="4">Monitori, periferije, štampači i konzole</option>
                    <option value="5">Mrežna oprema</option>
                    <option value="6">Bela tehnika</option>
                </select>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 control-label">Potkategorija:</label>
            <div class="col-sm-7">
                <select class="custom-select">
                    <option selected>Izaberite jednu potkategoriju</option>
                    <option value="1">aaa</option>
                    <option value="2">bbb</option>
                    <option value="3">ccc</option>
                </select>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 control-label">Dodaj sliku:</label>
            <input type="file" class="form-control-file" id="btnProductPicture">
        </div>

        <br />
        <br />
        <button class="btn btn-success col-sm-offset-3 btn-lg" id="addNewProduct" type="button"><i class="glyphicon glyphicon-ok"></i><span>&nbsp; Dodaj proizvod</span></button>
        <button class="btn btn-danger col-sm-offset-1 btn-lg" id="discardAdding" type="button"><i class="glyphicon glyphicon-remove"></i><span>&nbsp; Otkaži dodavanje</span></button>
        <br /> <br />
    </form>

    <!--Forma za dinamicko dodavanje karakteristika proizvoda-->
    <form id="formCharacteristics" class="col-md-5 float-left">
        <h4 class="text-center">Karakteristike</h4>
        <hr />
        <div class="form-group row">
            <label class="col-sm-4 control-label">Naziv:</label>
            <div class="col-sm-7">
                <input type="text" class="form-control" id="inputCharName1">
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 control-label">Vrednost:</label>
            <div class="col-sm-7">
                <input type="text" class="form-control" id="inputCharValue1">
            </div>
        </div>
        <hr />
        <br /> <br />
    </form>

    <div class="form-group row" style="margin-left:600px">
           <button class="btn btn-success" id="addNewCharacteristic" type="button"><span>&nbsp; Dodaj novu karakteristiku</span></button>
           <button class="btn btn-danger" id="deleteCharacteristic" type="button" style="display:none"><span>&nbsp; Obriši karakteristiku</span></button>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/Scripts/My scripts/NewProductScript.js")
}

