@model Database.DomainModel.Product
@{
    ViewBag.Title = "ProductDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-center">@Model.Name.ToUpper()</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <img src="~/Resources/@Model.Picture" class="rounded col-md-6" alt="Product picture" style="width:300px; height:200px" data-toggle="modal" data-target="#pictureModal">
    </div>
    <div class="col-md-6 float-right">
        <button type="button" class="btn btn-info btn-lg"><span>Dodaj u korpu &nbsp;</span><i class="fas fa-shopping-cart"></i></button>
        <br />
        <br />
        <h5 class="col-sm-6 control-label">Cena: @Model.Price</h5>
        <br />
        <br />
        <br />
        <label class="col-sm-6 control-label">Ocenite proizvod: <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i></label>
    </div>
</div>
<br />
<br />
<table class="table table-striped">
    <thead>
        <tr class="table-info">
            <th>Karakteristike</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var characteristic in Model.Characteristics)
        {
            var list = characteristic.Split(':');
        <tr>
            <td>@list[0]</td>
            <td>@list[1]</td>
        </tr>
        }
    </tbody>
</table>

<!--Modal koji prikazuje uvecanu sliku-->
<div class="modal fade" id="pictureModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <img src="~/Resources/@Model.Picture" class="rounded mx-auto d-block" alt="Product picture" style="width:400px; height:400px" />
            </div>
        </div>
    </div>
</div>
