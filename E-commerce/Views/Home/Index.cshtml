@model IEnumerable<Database.DomainModel.Product>
@{
    ViewBag.Title = "Početna strana";
}

<br />
<br />
@if (User.IsInRole("Admin"))
{
    <button type="button" class="btn btn-success btn-lg" id="btnAddProduct"><i class="fas fa-plus"></i> &nbsp; Dodaj proizvod</button>
}
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <a href="">
                <img width="100" height="350" class="d-block w-100" src="~/Resources/Adverts/CustomstranaGeforcegtx10.jpg" alt="First slide">
            </a>
        </div>
        <div class="carousel-item">
            <a href="#">
                <img width="100" height="350" class="d-block w-100" src="~/Resources/Adverts/custom_34.jpg" alt="Second slide">
            </a>
        </div>
        <div class="carousel-item">
            <a href="#">
                <img width="100" height="350" class="d-block w-100" src="~/Resources/Adverts/custom_35.jpg" alt="Third slide">
            </a>

        </div>
        <div class="carousel-item">
            <a href="#">
                <img width="100" height="350" class="d-block w-100" src="~/Resources/Adverts/custom_52.jpg" alt="Fourth slide">
            </a>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<br />

<div class="row" style="margin-left: 3px;">
    <div id="categories" class="bg-dark" style="color: white; width: 220px; padding-left: 10px;">
        <br />
        <p><i class="fas fa-book-open"></i>  Kategorije:</p>
        <hr />
        <ul id="myUL">
            <li>
                <span class="caret">Mobilni uređaji</span>
                <ul class="nested">
                    <li><i class="fas fa-circle fa-xs"></i> <a href="@Url.Action("CategoryProducts", "Product", new { category = "Laptop i tablet" })"  style="text-decoration: none; color: white;"> Laptopovi i tableti</a></li>
                    <li><i class="fas fa-circle fa-xs"></i> <a href="@Url.Action("CategoryProducts", "Product", new { category = "Telefoni" })" style="text-decoration: none; color: white;"> Mobilni telefoni</a></li>
                </ul>
            </li>
            <hr />
            <li>
                <span class="caret">Računari</span>
                <ul class="nested">
                    <li><i class="fas fa-circle fa-xs"></i><a href="@Url.Action("CategoryProducts", "Product", new { category = "Gotove konfiguracije" })" style="text-decoration: none; color: white;"> Gotove konfiguracije</a></li>
                    <li><i class="fas fa-circle fa-xs"></i><a href="@Url.Action("CategoryProducts", "Product", new { category = "Racunarske komponente" })" style="text-decoration: none; color: white;"> Računarske komponente</a></li>
                </ul>
            </li>
            <hr />
            <li>
                <span class="caret">Tv, audio, foto, video</span>
                <ul class="nested">
                    <li><i class="fas fa-circle fa-xs"></i><a href="@Url.Action("CategoryProducts", "Product", new { category = "TV i audio" })" style="text-decoration: none; color: white;"> Tv i audio</a></li>
                    <li><i class="fas fa-circle fa-xs"></i><a href="@Url.Action("CategoryProducts", "Product", new { category = "Foto i video" })" style="text-decoration: none; color: white;"> Foto i video</a></li>
                </ul>
            </li>
            <hr />
            <li>
                <span class="caret">Monitori, periferije, konzole</span>
                <ul class="nested">
                    <li><i class="fas fa-circle fa-xs"></i><a href="@Url.Action("CategoryProducts", "Product", new { category = "Monitori i periferije" })" style="text-decoration: none; color: white;"> Monitori i periferije</a></li>
                    <li><i class="fas fa-circle fa-xs"></i> <a href="@Url.Action("CategoryProducts", "Product", new { category = "Stampaci" })" style="text-decoration: none; color: white;"> Štampači</a></li>
                    <li><i class="fas fa-circle fa-xs"></i><a href="@Url.Action("CategoryProducts", "Product", new { category = "Konzole" })" style="text-decoration: none; color: white;"> Konzole</a></li>
                    <li><i class="fas fa-circle fa-xs"></i> <a href="@Url.Action("CategoryProducts", "Product", new { category = "Memorije" })" style="text-decoration: none; color: white;"> Memorije</a></li>
                </ul>
            </li>
            <hr />
            <li>
                <span class="caret"><a href="@Url.Action("CategoryProducts", "Product", new { category = "Mrezna oprema" })" style="text-decoration: none; color: white;"> Mrežna oprema</a></span>
                <ul class="nested"></ul>
            </li>
            <hr />
            <li>
                <span class="caret"><a href="@Url.Action("CategoryProducts", "Product", new { category = "Bela tehnika" })" style="text-decoration: none; color: white;"> Bela tehnika</a></span>
                <ul class="nested"></ul>
            </li>
        </ul>
    </div>

    @foreach (Database.DomainModel.Product product in Model)
    {
        <div class="card" style="width: 18rem; margin-left: 8px;">
            <img class="card-img-top" src="~/Resources/@product.Picture" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@product.Name</h5>
                <hr />
                <p class="card-text" style="font: bold; color: red;">Cena: @product.Price</p>
                <hr />
                <a href="/Product/ProductDetails/@product.Id" class="btn btn-dark" style="margin-left: 45px;">Pogledaj proizvod</a>
            </div>
        </div>
    }
</div>


@section scripts {
    @Scripts.Render("~/Scripts/My scripts/HomePageScript.js")
    @Scripts.Render("~/Scripts/My scripts/AdminProducts.js")
}